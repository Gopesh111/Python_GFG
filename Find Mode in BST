class Solution:
    def findMode(self, root: Optional[TreeNode]) -> List[int]:
        counts = {}
        
        def traverse(node):
            if not node: return
            counts[node.val] = counts.get(node.val, 0) + 1
            traverse(node.left)
            traverse(node.right)
            
        traverse(root)
        max_freq = max(counts.values())
        return [val for val, freq in counts.items() if freq == max_freq]
        
