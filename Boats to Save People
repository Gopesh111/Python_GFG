class Solution:
    def numRescueBoats(self, people: List[int], limit: int) -> int:
        ans = 0
        people.sort()
        
        while len(people) != 0:
            if len(people) == 1:
                ans += 1
                break
            
            if people[0] + people[-1] <= limit:
                people.pop(-1)
                people.pop(0)
            else:
                people.pop(-1)
            
            ans += 1
        return ans
